.uploadBtn {
    color: #fff;
    font-size: 4vw;
    margin: 10vw 10%;
    border: 1px solid #2798fc;
    border-radius: 4px;
    background-color: #2798fc;
}

:global(.am-button) {
    height: 0.57rem!important;
    line-height: 0.57rem!important;
}

.form {
    background-color: #fff;
    margin-top: 1vw;
}

.row {
    clear: both;
    width: 100%;
    height: 10%;

    :global(.am-list-item) { 
        float: right !important;
        position: relative;
        width: 70%;   
        min-height: 9vw; 
        margin-right: 4%;
        border-radius: 2px;
        padding-left: 2px;
        border: none;
        margin-top: 0px !important;
        font-size: 3vw;
    } 
    :global(.am-input-item) {     
        border: none;
    } 
    :global(.am-list-item .am-input-control input) {     
        font-size: 3vw;
        border: none;
    } 
    :global(.am-list-line) {     
        &::after {
            background-color: transparent!important;
        }
    } 

    :global(.am-list-item .am-list-line .am-list-arrow) {     
        margin-left: 20%;
    } 
    :global(.am-list-item .am-list-line .am-list-extra) {     
        text-align: left;
        flex-basis: 70%;
    } 
    :global(.am-list-item:not(:last-child) .am-list-line) {     
        border-bottom: 0PX solid #ddd;
    } 
    :global(.am-textarea-control textarea) {     
        font-size: 3vw;
    } 
        
}

.line {
    clear: both;
    width: 96%;
    height: 1px;
    margin: 0 2%;
    background-color: #e8e8e8;
}

.leftName {
    clear: both;
    float: left;
    width: 22%;
    text-align: right;
    font-size: 3vw;
    line-height: 3;
    height: 10%;
    color: #666;
}

.showInfo {
    margin: 6vw 10%;
    display: flex;
    width: 80%;
    align-items: center;
    text-align: center;
  }

.showInfo .progress {
    margin-right: 5px;
    width: 100%;
}