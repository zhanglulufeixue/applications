.bg {
  width: 100%;
  height: 100%;
  background-color: darkgray;
}

.titleLayout {
  width: 100%;
  height: 3%;
  background-color: darkblue;
  padding-top: 5%;
  padding-bottom: 5%;

  .back {
    width: 8%;
    float: left;
    padding-left: 5%;
  }

  .title {
    width: 100%;
    height: 4.5%;
    color: aliceblue;
    font-size: 16px;
    padding-left: 40%;
  }
}


.list {
  width: 100%;
  height: 90%;
}

.ItemBg {
  width: 100%;
  height: 100%;
}

.itemLayout {
  width: ~'calc(50% - 2px)';
  height: 35%;
  padding: 10px 1px 5px 1px;
  float: left;
}

.item {
  width: 100%;
  height: 100%;
  float: left;
}

.img {
  width: 100%;
  height: 100%;
}

.content {
  float: left;
  font-size: 16px;
}