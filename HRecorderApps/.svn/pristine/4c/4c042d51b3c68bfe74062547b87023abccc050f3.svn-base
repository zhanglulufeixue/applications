.orderContent {
    padding: 4%;
}

.title {
    width: 92%;
    height: 10%;
    font-size: 20px;
    text-align: center;
    margin: 4%;
}

.row {
    clear: both;
    width: 100%;
    height: 10%;
    margin-bottom: 4%;

    :global(.am-list-item) { 
        float: right;
        width: 65%;    
        border-radius: 2px;
        min-height: 40px;
        padding-left: 2px;
    } 
    :global(.am-input-item) {     
        height: 20px;
    } 
}

.leftName {
    clear: both;
    float: left;
    width: 28%;
    text-align: right;
    font-size: 20px;
    line-height: 2;
    height: 10%;

}

.scan {
    float: right;
    margin-top: 4%;
    &:hover{
        color: rgb(37, 78, 192);
    }
}

.btns {
    position: absolute;
    width: 92%;
    bottom: 10%;

    :global(.am-button) {
        float: left;
        width: 46%;
        text-align: center;
        margin-right: 4%;
    }
}

.date-picker-list .am-list-item .am-list-line .am-list-extra {
    flex-basis: initial;
  }