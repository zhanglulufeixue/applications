.videoContent {
    width: 92%;
    height: 100%;
    padding: 4%;

    :global(.am-list-item) {     
        border: 1px solid #ccc;
        border-radius: 4px;
        min-height: 36px;
    } 
    :global(.am-input-item) {     
        height: 36px;
    } 
}

.search {
    width: 80%;
    height: 13%;
    margin-bottom: 2%;
}

.itemContent {
    width: 100%;
    height: 25%;
}

.itemTitle {
    font-size: 16px;
    margin-bottom: 2%;
    display: inline-block;
}

.itemState {
    padding: 1%;
    font-size: 14px;
    margin-left: 4%;
    display: inline-block;
    border-radius: 4px;
    background-color: #124be7;
}

.itemTeacher {
    font-size: 14px;
    margin-bottom: 2%;
}

.itemDate {
    font-size: 14px;
    margin-bottom: 2%;
}

.itemRoom {
    float: left;
    font-size: 14px;
    margin-bottom: 2%;
}

.itemOperateInfo {
    float: right;
    font-size: 14px;
    width: 30%;
}

.itemOperate {
    margin-right: 8%;
}
.itemOperateDisable {
    margin-right: 8%;
    background-color: #333;
}

.plus {
    position: absolute;
    bottom: 10%;
    right: 10%;
}