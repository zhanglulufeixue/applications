import {
  getVideoList,
  getElseVideoList,
  viewCountAdd,
  getVideoDetails,
  savePhoneVideo,
  updateVideo,
  deleteVideo,
} from '../../service/videoPlayer';
import concat from 'lodash/concat';
import { Toast } from 'antd-mobile';
import router from 'umi/router';

export default {
  namespace: 'videoPlayer',

  state: {
    videoName: '',
    uploadTime: '',
    description: '',

    videoList: [],
    page: 0,
    pageSize: 0,
    search: '',
    userMobile: 15963257888,
    id: '',
    videoId: '',
    totalCount: 0,
    pageCount: 0,
    loading: false,

    elseVideoList: [],
    elsePageSize: 0,
    elsePage: 0,
    elseLoading: false,
    viewCount: 0,
    deleteList: [],
    idList: '',

    editItem: null, //编辑时的item

    uploadFile: '',
  },

  effects: {
    *getVideoList({ payload }, { call, put, select }) {
      const { page, pageSize, userMobile, search, videoList } = yield select(
        ({ videoPlayer }) => videoPlayer
      );
      const query = {
        page,
        pageSize,
        userMobile,
        search,
      };
      const data = yield call(getVideoList, query);
      if (data !== null && data !== undefined) {
        if (data.code === 0) {
          if (data.result.data[0] !== null && data.result.data[0] !== undefined) {
            yield put({
              type: 'changeState',
              payload: {
                uId: data.result.data[0].uId,
                age: data.result.currentPage,
                videoList: concat(videoList, data.result.data),
                totalCount: data.result.count,
                pageCount: data.result.pageCount,
              },
            });
          }
        }
      }
    },

    *getVideoDetails({ payload }, { call, put, select }) {
      const { videoId } = yield select(({ videoPlayer }) => videoPlayer);
      const query = {
        videoId: videoId,
      };
      const data = yield call(getVideoDetails, query);
      if (data !== null && data !== undefined) {
        if (data.code === 0) {
          if (data.result !== null && data.result !== undefined) {
            yield put({
              type: 'changeState',
              payload: {
                uploadTime: data.result.uploadTime,
                description: data.result.description,
                videoName: data.result.videoTitle,
              },
            });
          }
        }
      }
    },

    *getElseVideoList({ payload }, { call, put, select }) {
      const { elsePage, elsePageSize, userMobile, elseVideoList, videoId } = yield select(
        ({ videoPlayer }) => videoPlayer
      );
      const query = {
        page: elsePage,
        pageSize: elsePageSize,
        userMobile,
        videoId: videoId,
      };

      const data = yield call(getElseVideoList, query);
      if (data.code === 0) {
        yield put({
          type: 'changeState',
          payload: {
            elseVideoList: concat(elseVideoList, data.result.data),
          },
        });
      }
    },

    *viewCountAdd({ payload }, { call, select, put }) {
      const { videoId } = yield select(({ videoPlayer }) => videoPlayer);
      const query = {
        videoId,
      };
      const data = yield call(viewCountAdd, query);
      if (data.code === 0) {
        yield put({
          type: 'changeState',
          payload: {
            viewCount: data.result,
          },
        });
      }
    },

    // 添加视频上传入库
    *savePhoneVideo({ payload }, { call, select, put }) {
      const { userName, userMobile } = yield select(({ videoPlayer }) => videoPlayer);
      const query = {
        fileId: payload.fileId,
        videoUrl: payload.videoUrl,
        videoName: payload.videoName,
        description: payload.description,
        userName: userName || '',
        mobile: userMobile || '',
      };
      const data = yield call(savePhoneVideo, query);
      if (data.result) {
        Toast.hide();
        Toast.info('上传成功');
      }
    },

    // 修改视频信息
    *updateVideo({ payload }, { call, select, put }) {
      const query = {
        videoId: payload.videoId,
        videoName: payload.videoName,
        description: payload.description,
      };
      const data = yield call(updateVideo, query);
      if(data.result) {
        Toast.hide();
        Toast.info('修改成功');
        router.push('/Videos');
      }
    },

    // 删除视频
    *deleteVideo({ payload }, { call, select, put }) {
      const { idList, userMobile } = yield select(({ videoPlayer }) => videoPlayer);
      const query = {
        videoIds: idList,
      };
      const data = yield call(deleteVideo, query);
      if (data.code === 0) {
        if (data.result !== null && data.result !== undefined) {
          if (data.result === true) {
            yield put({
              type: 'changeState',
              payload: {
                videoList: [],
                page: 1,
                pageSize: 10,
                userMobile,
                search: '',
              },
            });
            yield put({
              type: 'getVideoList',
            });
          }
        }
      }
    },
  },

  reducers: {
    changeState(state, action) {
      return { ...state, ...action.payload };
    },
  },

  subscriptions: {
    setup({ dispatch, history }) {
      history.listen(location => {
        const { pathname, query } = location;
        const { videoId } = query;
        if (pathname === '/Videos/Details.html') {
          dispatch({
            type: 'changeState',
            payload: {
              videoId: videoId,
              elseVideoList: [],
              elsePage: 1,
              elsePageSize: 5,
              viewCount: 0,
              loading: true,
            },
          });
          dispatch({
            type: 'getVideoDetails',
          });

          dispatch({
            type: 'getElseVideoList',
          });

          dispatch({
            type: 'viewCountAdd',
          });
        }
      });
    },
  },
};
